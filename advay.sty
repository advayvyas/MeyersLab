% --- Theorem environments ---
\ifrishabhframe
  \RequirePackage[usenames,dvipsnames]{xcolor}
  \RequirePackage[framemethod=TikZ]{mdframed}
  \declaretheoremstyle[
    headfont=\sffamily\bfseries\color{MidnightBlue},
    bodyfont=\normalfont,
    mdframed={backgroundcolor=blue!5,linecolor=blue,roundcorner=5pt},
  ]{thmstyle}
\else
  \declaretheoremstyle[bodyfont=\itshape]{thmstyle}
\fi

\ifrishabhsec
  \declaretheorem[style=thmstyle,numberwithin=section]{theorem}
\else
  \declaretheorem[style=thmstyle]{theorem}
\fi
\declaretheorem[sibling=theorem]{lemma}
\declaretheorem[sibling=theorem]{proposition}
\declaretheorem[sibling=theorem]{corollary}
